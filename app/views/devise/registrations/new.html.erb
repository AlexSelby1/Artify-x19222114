   <main>
    <header>
        <b>Sign Up</b>
    </main>
    <hr>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="row justify-content-between">
    <div class="col-md-2">  
<%= f.label :seller, "Seller", :value => true %>
<%= f.radio_button :seller, true %>
</div>
<div class="col-md-2">
<%= f.label :seller, "Buyer", :value => false %>
<%= f.radio_button :seller, false %>
    </div>
</div>
    <div class="field">
    <%= f.label :Username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username" %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
    <div class="col-md-112">
    <%= f.label "Image" %><br><br>
    <%= f.file_field :userImage %>
    <% if f.object.userImage? %>
      <%= image_tag f.object.userImage.thumb.url %>
      <%= f.label "Remove Image" %>
      <%= f.check_box :remove_userImage %> 
    <% end %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>