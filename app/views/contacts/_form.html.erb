<%= form_for @contact do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
    <%= f.label :name %>
    <%= f.text_field :name, required: true %>
  </div>
<div class="form-group col-md-6">
    <%= f.label :email %>
    <%= f.text_field :email, required: true %>
  </div>
</div>
  <div class="form-group">
  					<select id="subjects" name="subject">
  						<option value="reset">Choose Subject</option>
  						<option value="events">Orders</option>
  						<option value="tickets">Payments</option>
  						<option value="artists">Artists</option>
  						<option value="0ther">Other</option>
  					</select>
  </div>

  <div class="field">
    <%= f.label :Message %>
    <%= f.text_area :message, :rows =>10, style: 'width:100%;' %>
  </div>
  <div class="hidden">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, hint: 'leave blank' %>      
  </div>
  <div class="actions">
    <%= link_to 'Submit', '/contacts/confirmation', :class => "button", :role => "button" %>
  </div>
  <% end %>