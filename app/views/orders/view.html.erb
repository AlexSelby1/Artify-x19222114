<main>
    <header>
        <b>My Orders</b>
    </main>
    <hr>
</header>

<div id="itemsContainer">
    <% if @myorders.empty? %>
<p>You have no orders</p>
  <% end %>
<table id="customers">
  <thead>
    <tr>
      <th>Order date</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @myorders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.user.username %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'View Order', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
